@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp Create New Category
            </a>
        </div>

    </div>
</div>

<table class = "table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th> </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="50%">
                    @category.CategoryName
                </td>
                <td width="30%">
                    @category.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Update" asp-route-id="@category.CategoryId"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit </a>
                    </div>
                </td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId"
                        class="btn btn-primary mx-2 btn-danger">
                            <i class="bi bi-x-circle-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

